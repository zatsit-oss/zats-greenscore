<div
    class="fixed bottom-0 left-0 right-0 p-4 flex justify-center gap-4 z-40 border-t border-[var(--color-border)] bg-white/80 dark:bg-slate-900/80 backdrop-blur-md"
>
    <button
        type="button"
        id="prevBtn"
        class="px-4 py-2 rounded-lg font-medium bg-[var(--color-surface)] border border-[var(--color-border)] text-[var(--color-text)] hover:border-[var(--color-primary)] hover:text-[var(--color-primary)] transition-colors"
        style="display: none;">Previous</button
    >
    <div class="flex-1"></div>
    <button
        type="button"
        id="nextBtn"
        class="px-4 py-2 rounded-lg font-medium bg-[var(--color-primary)] text-[var(--color-on-primary)] hover:bg-[var(--color-primary-hover)] transition-all hover:-translate-y-px"
        >Next</button
    >
    <button
        type="submit"
        id="submitBtn"
        class="px-4 py-2 rounded-lg font-medium bg-[var(--color-primary)] text-[var(--color-on-primary)] hover:bg-[var(--color-primary-hover)] transition-all hover:-translate-y-px"
        style="display: none;">Calculate Score</button
    >
</div>
