---
import AuditQuestion from "./AuditQuestion.astro";

interface Props {
    sectionName: string;
    questions: any[];
    index: number;
}

const { sectionName, questions, index } = Astro.props;
---

<div
    class="step-content p-8 rounded-xl bg-white/80 dark:bg-slate-900/70 backdrop-blur-md border border-white/50 dark:border-white/10 animate-[fadeIn_0.3s_ease]"
    data-step={index}
    style={index === 0 ? "" : "display: none;"}
>
    <h2
        class="text-2xl font-bold text-[var(--color-primary)] mb-6 pb-2 border-b border-[var(--color-border)]"
    >
        {sectionName}
    </h2>
    <div class="flex flex-col gap-8">
        {questions.map((q) => <AuditQuestion question={q} />)}
    </div>
</div>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
