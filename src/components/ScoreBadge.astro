---
interface Props {
	score: number;
}

const { score } = Astro.props;

let colorClass;
if (score >= 300)
	colorClass = "bg-emerald-500/20 text-[var(--color-status-completed)] border-emerald-500/30";
else if (score >= 100)
	colorClass = "bg-amber-500/20 text-[var(--color-status-inprogress)] border-amber-500/30";
else if (score >= 50)
	colorClass = "bg-slate-500/20 text-[var(--color-status-pending)] border-slate-500/30";
else
	colorClass = "bg-red-500/20 text-red-500 border border-red-500/30";
---

<div
	class={`inline-flex items-baseline px-3 py-1 rounded-full font-bold text-xl ${colorClass}`}
>
	<span class="mr-0.5">{score}</span>
	<span class="text-xs opacity-80 font-medium">/100</span>
</div>
